<h1><%= @task.name %></h1>
<p><%= @task.description %></p>

<div style="background: gray; padding: 10px">
<p>
Creator: <%= @task.creator %>
</p>
<p>
Performer: <%= @task.performer %>
</p>
</div>

<%= link_to 'Edit', edit_task_path(@task) %>
